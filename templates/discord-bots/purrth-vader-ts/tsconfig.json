{
	"compilerOptions": {
		"target": "ESNext",
		"lib": [
			"esnext"
		],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"incremental": true,
		"typeRoots": [
			"./env.d.ts"
		]
	},
	"include": [
		"**/*.ts"
	],
	"exclude": [
		"node_modules"
	]
}