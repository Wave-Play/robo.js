{
	"compilerOptions": {
		"target": "esnext",
		"lib": ["ES2022"],
		"baseUrl": ".",
		"paths": {
			"~/*": ["src/*"],
			"@robojs/xp": ["src/index.ts"]
		},
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"esModuleInterop": true,
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"incremental": true
	},
	"include": ["src/**/*", "seed/rewards"],
	"exclude": ["node_modules", "__tests__", ".robo"]
}
