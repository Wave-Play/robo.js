{
	"name": "@robojs/i18n",
	"description": "Safely translate your Robo and Discord slash commands.",
	"version": "0.1.0",
	"type": "module",
	"private": false,
	"keywords": [
		"bot",
		"discord",
		"discord.js",
		"robo",
		"robo.js",
		"typescript"
	],
	"main": ".robo/build/index.js",
	"types": ".robo/build/index.d.ts",
	"exports": {
		".": {
			"types": "./.robo/build/index.d.ts",
			"default": "./.robo/build/index.js"
		}
	},
	"bin": {
		"i18n": ".robo/build/cli/index.js"
	},
	"license": "MIT",
	"author": "WavePlay <dev@waveplay.com> (waveplay.com)",
	"contributors": [
		"Pkmmte Xeleon <pk@waveplay.com>"
	],
	"files": [
		".robo/",
		"src/",
		"LICENSE",
		"README.md"
	],
	"publishConfig": {
		"access": "public",
		"registry": "https://registry.npmjs.org/"
	},
	"scripts": {
		"build": "robo build plugin",
		"build:test": "node .robo/build/cli/index.js",
		"dev": "robo build plugin --watch",
		"fix:permission": "chmod +x .robo/build/cli/index.js",
		"lint:style": "prettier --write .",
		"prepublishOnly": "robo build plugin",
		"pretest": "pnpm run build",
		"test": "NODE_OPTIONS=--experimental-vm-modules jest && tstyche"
	},
	"dependencies": {
		"messageformat": "4.0.0-12"
	},
	"devDependencies": {
		"@jest/globals": "^30.1.1",
		"@swc/core": "^1.13.3",
		"@types/jest": "^29.5.5",
		"@types/node": "^24.2.1",
		"discord.js": "^14.21.0",
		"jest": "^29.7.0",
		"prettier": "^3.6.2",
		"robo.js": "workspace:*",
		"ts-jest": "^29.1.1",
		"ts-node": "^10.9.2",
		"tstyche": "^4.3.0",
		"typescript": "^5.9.2"
	},
	"peerDependenciesMeta": {
		"robo.js": {
			"optional": false
		}
	}
}
