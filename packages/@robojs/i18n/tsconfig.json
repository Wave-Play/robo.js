{
	"compilerOptions": {
		"target": "ESNext",
		"lib": ["esnext"],
		"baseUrl": ".",
		"paths": {
			"~/*": ["src/*"]
		},
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"incremental": true,
		"types": ["jest", "node"]
	},
	"include": ["**/*.ts"],
	"exclude": ["node_modules"]
}
