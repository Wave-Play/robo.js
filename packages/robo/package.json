{
	"name": "robo.js",
	"version": "0.10.31",
	"private": false,
	"description": "The Discord Framework - activities, bots, web servers, and more!",
	"keywords": [
		"discord",
		"bot",
		"framework",
		"discord.js",
		"javascript",
		"typescript",
		"waveplay",
		"robo",
		"robo.js",
		"roboplay",
		"discordjs"
	],
	"main": "dist/index.js",
	"engines": {
		"node": ">=18.0.0"
	},
	"exports": {
		".": {
			"import": "./dist/index.js",
			"types": "./dist/index.d.ts"
		},
		"./*": {
			"types": "./*",
			"import": "./*"
		}
	},
	"scripts": {
		"benchmark": "NODE_OPTIONS=\"--expose-gc\" tsx __benchmarks__/*.bench.ts",
		"build": "tsup && tsup --config tsup-cli.config.ts",
		"dev": "chokidar \"src/**/*.ts\" \"codemod/**/*.ts\" -d 1000 -c \"pnpm build\" --initial",
		"test": "NODE_OPTIONS=\"--experimental-vm-modules --disable-warning=ExperimentalWarning\" jest"
	},
	"bin": {
		"robo": "dist/cli/index.js",
		"robox": "dist/cli/robox.js",
		"sage": "dist/cli/sage.js"
	},
	"type": "module",
	"license": "MIT",
	"files": [
		"dist/",
		"src/",
		"cli.d.ts",
		"cli.js",
		"flashcore.d.ts",
		"flashcore.js",
		"unstable.d.ts",
		"unstable.js",
		"LICENSE",
		"logger.d.ts",
		"logger.js",
		"README.md",
		"types.d.ts",
		"types.js",
		"utils.d.ts",
		"utils.js"
	],
	"author": "WavePlay <dev@waveplay.com> (waveplay.com)",
	"contributors": [
		"Pkmmte Xeleon <pk@waveplay.com>"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/Wave-Play/robo.js.git",
		"directory": "packages/robo"
	},
	"publishConfig": {
		"access": "public",
		"registry": "https://registry.npmjs.org/"
	},
	"devDependencies": {
		"@swc/core": "1.13.5",
		"@types/jest": "^29.5.5",
		"@types/node": "24.3.0",
		"chokidar-cli": "^3.0.0",
		"discord.js": "14.19.3",
		"jest": "^29.7.0",
		"jest-resolver-enhanced": "^1.1.0",
		"keyv": "^4.5.2",
		"ts-jest": "^29.1.1",
		"tsup": "8.5.0",
		"typescript": "5.8.2",
		"vite": "^5.2.0"
	},
	"peerDependencies": {
		"@swc/core": "^1.3.41",
		"discord.js": "^14.0.0",
		"keyv": ">=4.0.0",
		"typescript": "^5.0.0",
		"vite": "^5.0.0"
	},
	"peerDependenciesMeta": {
		"@swc/core": {
			"optional": true
		},
		"discord.js": {
			"optional": false
		},
		"keyv": {
			"optional": true
		},
		"typescript": {
			"optional": true
		},
		"vite": {
			"optional": true
		}
	}
}
